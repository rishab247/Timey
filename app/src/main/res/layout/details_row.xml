<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/detailscardView"


    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/detailcardView"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foregroundGravity="center_vertical"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relatisveLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/detailstitle"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="#fff"
                android:gravity="center"
                android:text="TITIE"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/detailsimage"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/detailssettime"
                android:layout_width="143dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="12:00"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailsimage"
                app:layout_constraintTop_toBottomOf="@+id/detailstitle" />

            <TextView
                android:id="@+id/detailsampm"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="AM"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/detailssettime"
                app:layout_constraintStart_toStartOf="@+id/detailssettime" />

            <ImageView
                android:id="@+id/detailsimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/ic_menu_camera"
                android:contentDescription="@android:string/cut"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.489" />

            <TextView
                android:id="@+id/detailsmo"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:gravity="center"
                android:text="MO"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/detailsimage"
                app:layout_constraintTop_toBottomOf="@+id/detailstitle"
                app:layout_constraintVertical_bias="0.977" />

            <TextView
                android:id="@+id/detailstu"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailsmo"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:background="#fff"
                android:gravity="center"
                android:text="TU"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailsmo"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />

            <TextView
                android:id="@+id/detailswe"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:background="#fff"
                android:gravity="center"
                android:text="WE"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/detailstu" />

            <TextView
                android:id="@+id/detailsthu"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:background="#fff"
                android:gravity="center"
                android:text="TH"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailswe"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />

            <TextView
                android:id="@+id/detailsfri"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:background="#fff"
                android:gravity="center"
                android:text="FR"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailsthu"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />

            <TextView
                android:id="@+id/detailssat"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:background="#fff"
                android:gravity="center"
                android:text="SA"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailsfri"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />

            <TextView
                android:id="@+id/detailssun"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:background="#fff"
                android:gravity="center"
                android:text="SU"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailssat"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>